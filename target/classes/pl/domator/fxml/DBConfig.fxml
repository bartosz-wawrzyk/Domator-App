<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="600.0" style="-fx-background-color: #f9f8f6; -fx-padding: 15;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.domator.config.DBConfigController">

    <center>
        <VBox fx:id="mainVBox" spacing="15" style="-fx-background-color: white; -fx-padding: 20;                      -fx-border-color: #dcd8d3; -fx-border-radius: 8; -fx-background-radius: 8;">

            <HBox alignment="CENTER_LEFT" spacing="10">
                <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
                    <Image url="@../icons/gear.png" />
                </ImageView>
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Konfiguracja bazy danych" />
            </HBox>

            <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Aktualna konfiguracja:" />

            <TextArea fx:id="currentConfigArea" editable="false" prefRowCount="6" style="-fx-font-family: 'Consolas'; -fx-font-size: 13px;                              -fx-background-color: #f0f0f0;" wrapText="true" />

            <GridPane hgap="12" style="-fx-padding: 10;" vgap="10">
                <columnConstraints>
                    <ColumnConstraints prefWidth="150" />
                    <ColumnConstraints prefWidth="300" />
                </columnConstraints>

                <Label text="Serwer:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="serverField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Port:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="portField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Baza danych:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="dbNameField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Użytkownik:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="userField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Hasło:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>

            <HBox alignment="CENTER" spacing="10">
                <Button onAction="#onTestConnection" prefWidth="160" text="Sprawdź połączenie" />
                <Button onAction="#onInitDatabase" prefWidth="160" text="Utwórz schemat" />
            </HBox>

        </VBox>
    </center>

</BorderPane>
