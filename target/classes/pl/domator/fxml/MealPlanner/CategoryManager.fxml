<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<?import java.lang.String?>
<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pl.domator.Modules.MealPlanner.Controller.CategoryManagerController"
            prefHeight="600" prefWidth="700"
            style="-fx-background-color: #f9f8f6; -fx-border-color: #e0dedb; -fx-padding: 20;">

    <center>
        <VBox fx:id="mainVBox" spacing="15"
              style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #dcd8d3; -fx-border-radius: 8;">

            <Label text="ðŸ”§ ZarzÄ…dzanie kategoriami"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" />

            <HBox spacing="20">
                <RadioButton fx:id="rbProtein" text="MiÄ™sa / Ryby / Vege" selected="true" toggleGroup="$categoryGroup"/>
                <RadioButton fx:id="rbBase" text="Bazy" toggleGroup="$categoryGroup"/>
                <RadioButton fx:id="rbMeal" text="PosiÅ‚ki" toggleGroup="$categoryGroup"/>
            </HBox>

            <TableView fx:id="table" prefHeight="300" style="-fx-border-color: #e0dedb;">
                <columns>
                    <TableColumn fx:id="colName" prefWidth="200" text="Nazwa"/>
                    <TableColumn fx:id="colCategory" prefWidth="200" text="Kategoria" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <styleClass>
                    <String fx:value="custom-table" />
                </styleClass>
            </TableView>

            <GridPane hgap="10" vgap="10" style="-fx-padding: 10;">
                <columnConstraints>
                    <ColumnConstraints prefWidth="150"/>
                    <ColumnConstraints prefWidth="300"/>
                </columnConstraints>

                <Label text="Nazwa:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="nameField" disable="true"
                           GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Kategoria:" fx:id="categoryLabel"
                       GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="categoryField" disable="true"
                           GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </GridPane>

        </VBox>
    </center>

    <stylesheets>
        <URL value="@../../styles/table.css"/>
    </stylesheets>

</BorderPane>