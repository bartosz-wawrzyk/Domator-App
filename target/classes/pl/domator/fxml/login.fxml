<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="249.0" prefWidth="403.0" style="-fx-background-color: #f9f8f6; -fx-border-color: #e0dedb; -fx-border-radius: 10; -fx-background-radius: 10;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.domator.Modules.UI.LoginController">

    <top>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
            <ImageView fitHeight="80" fitWidth="80" preserveRatio="true">
                <Image url="@../icons/logo.PNG" />
            </ImageView>

            <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Domator App" />
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="12">
            <padding>
                <Insets bottom="20" left="40" right="40" top="20" />
            </padding>

            <TextField fx:id="usernameField" prefWidth="240" promptText="Login" style="-fx-background-color: white; -fx-border-color: #dcd8d3; -fx-border-radius: 5; -fx-background-radius: 5;" />

            <PasswordField fx:id="passwordField" prefWidth="240" promptText="Hasło" style="-fx-background-color: white; -fx-border-color: #dcd8d3; -fx-border-radius: 5; -fx-background-radius: 5;" />

            <CheckBox fx:id="rememberMeCheckBox" style="-fx-text-fill: #444;" text="Zapamiętaj mnie" />

            <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10 0 0 0;">
                <Button fx:id="loginButton" onAction="#handleLogin" style="-fx-background-color: #7c97b0; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 6 18;" text="Zaloguj" />

                <Button onAction="#openRegister" style="-fx-background-color: #d9cbb5; -fx-text-fill: #333; -fx-background-radius: 5; -fx-padding: 6 18;" text="Zarejestruj" />
            </HBox>

            <Label fx:id="statusLabel" style="-fx-text-fill: #a33; -fx-font-size: 12px;" />

            <StackPane fx:id="loadingPane" visible="false">
                <ProgressIndicator />
            </StackPane>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" prefHeight="28.0" prefWidth="401.0" spacing="10" style="-fx-padding: 0 10 6 0;">
            <Button onAction="#openDBConfig" style="-fx-background-color: transparent;">
                <graphic>
                    <ImageView fitHeight="24" fitWidth="24" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../icons/gear.png" />
                    </ImageView>
                </graphic>
                <tooltip>
                    <Tooltip text="Konfiguracja połączenia" />
                </tooltip>
            </Button>
        </HBox>
    </bottom>
</BorderPane>