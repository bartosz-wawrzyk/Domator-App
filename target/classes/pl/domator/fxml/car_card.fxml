<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<?import java.lang.String?>
<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pl.domator.modules.auto.controller.VehicleController"
            prefHeight="700" prefWidth="855.0"
            style="-fx-background-color: #f9f8f6; -fx-border-color: #e0dedb; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 20;">

    <center>
        <VBox fx:id="mainVBox" spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #dcd8d3; -fx-border-radius: 8; -fx-background-radius: 8;">

            <Label text="ðŸš— Pojazdy" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" />

            <TableView fx:id="vehicleTable" prefHeight="350" style="-fx-border-color: #e0dedb;">
                <columns>
                    <TableColumn fx:id="colBrand" prefWidth="150" text="Marka" />
                    <TableColumn fx:id="colModel" prefWidth="150" text="Model" />
                    <TableColumn fx:id="colYear" prefWidth="100" text="Rok prod." />
                    <TableColumn fx:id="colReg" prefWidth="150" text="Nr rejestracyjny" />
                    <TableColumn fx:id="colMileage" prefWidth="150" text="Przebieg (km)" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
                <styleClass>
                    <String fx:value="custom-table"/>
                </styleClass>
            </TableView>

            <GridPane hgap="10" vgap="8" style="-fx-padding: 10;">
                <columnConstraints>
                    <ColumnConstraints prefWidth="130"/>
                    <ColumnConstraints prefWidth="200"/>
                    <ColumnConstraints prefWidth="130"/>
                    <ColumnConstraints prefWidth="200"/>
                </columnConstraints>

                <Label text="Marka:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="brandField" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Model:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <TextField fx:id="modelField" disable="true" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                <Label text="Rok produkcji:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="yearField" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Nr rejestracyjny:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <TextField fx:id="registrationField" disable="true" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                <Label text="VIN:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="vinField" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Paliwo:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                <TextField fx:id="fuelTypeField" disable="true" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

                <Label text="Przebieg:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="mileageField" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Uwagi:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextArea fx:id="notesArea" disable="true" prefRowCount="3" wrapText="true"
                          GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="4"/>
            </GridPane>
        </VBox>
    </center>

    <stylesheets>
        <URL value="@../styles/table.css"/>
    </stylesheets>
</BorderPane>