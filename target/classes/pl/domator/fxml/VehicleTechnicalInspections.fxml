<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>

<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pl.domator.modules.auto.controller.VehicleTechnicalInspectionsController"
            prefWidth="900" prefHeight="650"
            style="-fx-background-color: #f9f8f6; -fx-padding: 15;">

    <center>
        <VBox fx:id="mainVBox" spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #dcd8d3; -fx-border-radius: 8; -fx-background-radius: 8;">

            <Label text="ðŸ”§ Badania techniczne pojazdÃ³w" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" />

            <HBox spacing="10">
                <Label text="Wybierz pojazd:"/>
                <ComboBox fx:id="vehicleComboBox" prefWidth="300"/>
            </HBox>

            <TableView fx:id="inspectionTable" prefHeight="300" style="-fx-border-color: #e0dedb;">
                <columns>
                    <TableColumn fx:id="colDate" text="Data badania" prefWidth="120"/>
                    <TableColumn fx:id="colValidUntil" text="WaÅ¼ne do" prefWidth="120"/>
                    <TableColumn fx:id="colMileage" text="Przebieg" prefWidth="100"/>
                    <TableColumn fx:id="colCost" text="Koszt" prefWidth="100"/>
                    <TableColumn fx:id="colNotes" text="Uwagi" prefWidth="250"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <styleClass>
                    <String fx:value="custom-table"/>
                </styleClass>
            </TableView>

            <GridPane hgap="10" vgap="8" style="-fx-padding: 10;">
                <columnConstraints>
                    <ColumnConstraints prefWidth="120"/>
                    <ColumnConstraints prefWidth="200"/>
                    <ColumnConstraints prefWidth="120"/>
                    <ColumnConstraints prefWidth="200"/>
                </columnConstraints>

                <Label text="Data badania:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <DatePicker fx:id="inspectionDatePicker" disable="true" prefWidth="200"
                             GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="WaÅ¼ne do:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <DatePicker fx:id="validUntilPicker" disable="true" prefWidth="200"
                             GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                <Label text="Przebieg:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="mileageField" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Koszt:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <TextField fx:id="costField" disable="true" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                <Label text="Uwagi:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextArea fx:id="notesArea" disable="true" prefRowCount="3" wrapText="true"
                          GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="2"/>
            </GridPane>

        </VBox>
    </center>

    <stylesheets>
        <URL value="@../styles/table.css"/>
    </stylesheets>
</BorderPane>