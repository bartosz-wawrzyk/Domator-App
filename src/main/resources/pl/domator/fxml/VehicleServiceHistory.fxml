<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<?import java.lang.String?>
<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pl.domator.modules.auto.controller.VehicleServiceHistoryController"
            prefWidth="900" prefHeight="650"
            style="-fx-background-color: #f9f8f6; -fx-padding: 15;">

    <center>
        <VBox fx:id="mainVBox" spacing="15"
              style="-fx-background-color: white; -fx-padding: 20;
                     -fx-border-color: #dcd8d3; -fx-border-radius: 8; -fx-background-radius: 8;">

            <Label text="ðŸ›  Historia serwisowa pojazdu"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" />

            <HBox spacing="10">
                <Label text="Wybierz pojazd:"/>
                <ComboBox fx:id="vehicleComboBox" prefWidth="300"/>
            </HBox>

            <TableView fx:id="serviceTable" prefHeight="300" style="-fx-border-color: #e0dedb;">
                <columns>
                    <TableColumn fx:id="colServiceDate" text="Data serwisu" prefWidth="120"/>
                    <TableColumn fx:id="colMileage" text="Przebieg" prefWidth="100"/>
                    <TableColumn fx:id="colCost" text="Koszt" prefWidth="100"/>
                    <TableColumn fx:id="colDescription" text="Opis" prefWidth="400"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <styleClass>
                    <String fx:value="custom-table"/>
                </styleClass>
            </TableView>

            <GridPane hgap="10" vgap="10" style="-fx-padding: 10;">
                <columnConstraints>
                    <ColumnConstraints prefWidth="120"/>
                    <ColumnConstraints prefWidth="200"/>
                    <ColumnConstraints prefWidth="120"/>
                    <ColumnConstraints prefWidth="200"/>
                </columnConstraints>

                <Label text="Data serwisu:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <DatePicker fx:id="serviceDatePicker" disable="true" prefWidth="200"
                            GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Przebieg:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <TextField fx:id="mileageField" disable="true" prefWidth="200"
                           GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                <Label text="Koszt:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="costField" disable="true" prefWidth="200"
                           GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Opis:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextArea fx:id="descriptionArea" disable="true" prefRowCount="3" wrapText="true"
                          GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="2"/>
            </GridPane>

        </VBox>
    </center>

    <stylesheets>
        <URL value="@../styles/table.css"/>
    </stylesheets>
</BorderPane>