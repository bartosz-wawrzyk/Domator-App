<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<?import java.lang.String?>
<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pl.domator.Modules.Finances.Controller.CreditsController"
            prefWidth="1200" prefHeight="700"
            style="-fx-background-color: #f9f8f6; -fx-border-color: #e0dedb; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 20;">

    <center>
        <SplitPane dividerPositions="0.5" style="-fx-background-color: transparent;">
            <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #dcd8d3; -fx-border-radius: 8; -fx-background-radius: 8;">
                <Label text="ðŸ’° Kredyty"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" />

                <TableView fx:id="loansTable" prefHeight="250" style="-fx-border-color: #e0dedb; -fx-border-radius: 5; -fx-background-radius: 5;">
                    <columns>
                        <TableColumn fx:id="bankColumn" text="Bank" prefWidth="150"/>
                        <TableColumn fx:id="subjectColumn" text="Przedmiot" prefWidth="180"/>
                        <TableColumn fx:id="totalColumn" text="Kwota caÅ‚kowita" prefWidth="130"/>
                        <TableColumn fx:id="remainingColumn" text="PozostaÅ‚o" prefWidth="130"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <styleClass>
                        <String fx:value="custom-table"/>
                    </styleClass>
                </TableView>

                <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
                    <Button fx:id="addLoanBtn" text="Dodaj" onAction="#handleAddLoan"
                            style="-fx-background-color: #7c97b0; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 6 18;"/>
                    <Button fx:id="editLoanBtn" text="Edytuj" onAction="#handleEditLoan"
                            style="-fx-background-color: #d9cbb5; -fx-text-fill: #333; -fx-background-radius: 5; -fx-padding: 6 18;"/>
                    <Button fx:id="deleteLoanBtn" text="UsuÅ„" onAction="#handleDeleteLoan"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 6 18;"/>
                    <Button fx:id="saveLoanBtn" text="Zapisz" onAction="#handleSaveLoan" disable="true"
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 6 18;"/>
                    <Button fx:id="cancelLoanBtn" text="Anuluj" onAction="#handleCancelLoan" disable="true"
                            style="-fx-background-color: #bdc3c7; -fx-text-fill: #333; -fx-background-radius: 5; -fx-padding: 6 18;"/>
                </HBox>

                <GridPane hgap="10" vgap="8" style="-fx-padding: 10;">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="130"/>
                        <ColumnConstraints prefWidth="200"/>
                        <ColumnConstraints prefWidth="130"/>
                        <ColumnConstraints prefWidth="200"/>
                    </columnConstraints>

                    <Label text="Bank:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="bankField" GridPane.rowIndex="0" GridPane.columnIndex="1" disable="true"/>

                    <Label text="Przedmiot:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                    <TextField fx:id="subjectField" GridPane.rowIndex="0" GridPane.columnIndex="3" disable="true"/>

                    <Label text="Kwota caÅ‚kowita:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="totalField" GridPane.rowIndex="1" GridPane.columnIndex="1" disable="true"/>

                    <Label text="Rata:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                    <TextField fx:id="installmentField" GridPane.rowIndex="1" GridPane.columnIndex="3" editable="false" disable="true"/>

                    <Label text="Termin:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <DatePicker fx:id="dueDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1" disable="true"/>

                    <Label text="NadpÅ‚ata ten sam rachunek:" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                    <CheckBox fx:id="sameAccountCheckBox" GridPane.rowIndex="2" GridPane.columnIndex="3" disable="true"/>

                    <Label text="SpÅ‚acono:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="paidField" GridPane.rowIndex="3" GridPane.columnIndex="1" editable="false" disable="true"/>

                    <Label text="NadpÅ‚aty:" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
                    <TextField fx:id="overpaymentField" GridPane.rowIndex="3" GridPane.columnIndex="3" editable="false" disable="true"/>

                    <Label text="PozostaÅ‚o:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <TextField fx:id="remainingField" GridPane.rowIndex="4" GridPane.columnIndex="1" editable="false" disable="true"/>
                </GridPane>
            </VBox>

            <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #dcd8d3; -fx-border-radius: 8; -fx-background-radius: 8;">
                <Label text="ðŸ“‹ Historia wpÅ‚at"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" />

                <TableView fx:id="paymentsTable" prefHeight="250" style="-fx-border-color: #e0dedb; -fx-border-radius: 5; -fx-background-radius: 5;">
                    <columns>
                        <TableColumn fx:id="dateColumn" text="Data" prefWidth="120"/>
                        <TableColumn fx:id="amountColumn" text="Kwota" prefWidth="100"/>
                        <TableColumn fx:id="typeColumn" text="Typ" prefWidth="150"/>
                        <TableColumn fx:id="noteColumn" text="Notatka" prefWidth="180"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <styleClass>
                        <String fx:value="custom-table"/>
                    </styleClass>
                </TableView>

                <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
                <Button fx:id="addPaymentBtn" text="Dodaj" onAction="#handleAddPayment"
                            style="-fx-background-color: #7c97b0; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 6 18;"/>
                    <Button fx:id="editPaymentBtn" text="Edytuj" onAction="#handleEditPayment"
                            style="-fx-background-color: #d9cbb5; -fx-text-fill: #333; -fx-background-radius: 5; -fx-padding: 6 18;"/>
                    <Button fx:id="deletePaymentBtn" text="UsuÅ„" onAction="#handleDeletePayment"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 6 18;"/>
                    <Button fx:id="savePaymentBtn" text="Zapisz" onAction="#handleSavePayment" disable="true"
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 6 18;"/>
                    <Button fx:id="cancelPaymentBtn" text="Anuluj" onAction="#handleCancelPayment" disable="true"
                            style="-fx-background-color: #bdc3c7; -fx-text-fill: #333; -fx-background-radius: 5; -fx-padding: 6 18;"/>
                </HBox>

                <GridPane hgap="10" vgap="8" style="-fx-padding: 10;">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="130"/>
                        <ColumnConstraints prefWidth="200"/>
                        <ColumnConstraints prefWidth="130"/>
                        <ColumnConstraints prefWidth="200"/>
                    </columnConstraints>

                    <Label text="Data wpÅ‚aty:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <DatePicker fx:id="paymentDatePicker" GridPane.rowIndex="0" GridPane.columnIndex="1" disable="true"/>

                    <Label text="Kwota:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                    <TextField fx:id="paymentAmountField" GridPane.rowIndex="0" GridPane.columnIndex="3" disable="true"/>

                    <Label text="Typ wpÅ‚aty:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="paymentTypeCombo" GridPane.rowIndex="1" GridPane.columnIndex="1" disable="true"/>

                    <Label text="Notatka:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                    <TextField fx:id="paymentNoteField" GridPane.rowIndex="1" GridPane.columnIndex="3" disable="true"/>
                </GridPane>
            </VBox>
        </SplitPane>
    </center>

    <stylesheets>
        <URL value="@../../styles/table.css"/>
    </stylesheets>
</BorderPane>
