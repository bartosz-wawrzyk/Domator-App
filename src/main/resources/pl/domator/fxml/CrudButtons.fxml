<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<HBox xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pl.domator.core.CrudButtonsController"
      alignment="CENTER" spacing="10" style="-fx-padding:10 0 0 0;">

    <Button fx:id="addBtn" text="Dodaj"
            style="-fx-background-color: #7c97b0; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 6 18;" />
    <Button fx:id="editBtn" text="Edytuj"
            style="-fx-background-color: #d9cbb5; -fx-text-fill: #333; -fx-background-radius: 5; -fx-padding: 6 18;" />
    <Button fx:id="deleteBtn" text="UsuÅ„"
            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 6 18;" />
    <Button fx:id="saveBtn" text="Zapisz" disable="true"
            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 6 18;" />
    <Button fx:id="cancelBtn" text="Anuluj" disable="true"
            style="-fx-background-color: #bdc3c7; -fx-text-fill: #333; -fx-background-radius: 5; -fx-padding: 6 18;" />

</HBox>