<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.Image?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="pl.domator.config.DBConfigController"
            prefWidth="700" prefHeight="600"
            style="-fx-background-color: #f8f9fa;">

    <VBox spacing="12" AnchorPane.topAnchor="15" AnchorPane.leftAnchor="15" AnchorPane.rightAnchor="15">
        <padding>
            <Insets top="15" right="15" bottom="15" left="15"/>
        </padding>

        <HBox alignment="CENTER_LEFT" spacing="10">
            <ImageView fitWidth="40" fitHeight="40" pickOnBounds="true" preserveRatio="true">
                <Image url="@../icons/gear.png"/>
            </ImageView>
            <Label text="Konfiguracja bazy danych" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        </HBox>

        <Label text="Aktualna konfiguracja:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <TextArea fx:id="currentConfigArea"
                  editable="false"
                  wrapText="true"
                  prefRowCount="6"
                  style="-fx-font-family: 'Consolas'; -fx-font-size: 13px; -fx-background-color: #f0f0f0;"
                  prefHeight="150"/>

        <HBox spacing="10" alignment="CENTER">
            <Button text="Dodaj" onAction="#onAdd" prefWidth="100"/>
            <Button text="Edytuj" onAction="#onEdit" prefWidth="100"/>
            <Button text="Usuń" onAction="#onDelete" prefWidth="100"/>
            <Button text="Sprawdź połączenie" onAction="#onTestConnection" prefWidth="160"/>
            <Button text="Utwórz schemat" onAction="#onInitDatabase" prefWidth="160"/>
        </HBox>

        <Separator/>

        <GridPane hgap="12" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <columnConstraints>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="75"/>
            </columnConstraints>

            <Label text="Serwer:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="serverField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Port:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="portField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Baza danych:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="dbNameField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Użytkownik:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="userField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Hasło:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <PasswordField fx:id="passwordField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Zapisz" fx:id="saveButton" onAction="#onSave" prefWidth="100"/>
            <Button text="Anuluj" fx:id="cancelButton" onAction="#onCancel" prefWidth="100"/>
        </HBox>

        <Separator/>

        <Label fx:id="statusLabel"
               textFill="#007b00"
               wrapText="true"
               style="-fx-font-size: 14px; -fx-font-weight: bold;"
               prefHeight="40"/>
    </VBox>
</AnchorPane>