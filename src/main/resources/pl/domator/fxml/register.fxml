<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="pl.domator.modules.ui.RegisterController"
      alignment="CENTER" spacing="12"
      prefWidth="400" prefHeight="300"
      style="-fx-background-color: #f9f8f6; -fx-border-color: #e0dedb; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 20;">

    <Label text="Rejestracja użytkownika"
           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

    <TextField fx:id="usernameField"
               promptText="Login"
               style="-fx-background-color: white; -fx-border-color: #dcd8d3; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 6;"/>

    <PasswordField fx:id="passwordField"
                   promptText="Hasło"
                   style="-fx-background-color: white; -fx-border-color: #dcd8d3; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 6;"/>

    <Button fx:id="registerButton"
            text="Zarejestruj"
            onAction="#handleRegister"
            style="-fx-background-color: #7c97b0; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 6 18;"/>

    <Label fx:id="statusLabel"
           style="-fx-text-fill: #e74c3c; -fx-font-size: 12px;"/>

</VBox>
