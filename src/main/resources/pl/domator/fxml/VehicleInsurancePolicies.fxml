<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.collections.FXCollections?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pl.domator.modules.auto.controller.VehicleInsurancePoliciesController"
            prefWidth="900" prefHeight="650"
            style="-fx-background-color: #f9f8f6; -fx-padding: 15;">

    <center>
        <VBox fx:id="mainVBox" spacing="15"
              style="-fx-background-color: white; -fx-padding: 20;
                     -fx-border-color: #dcd8d3; -fx-border-radius: 8; -fx-background-radius: 8;">

            <Label text="ðŸ›¡ Polisy ubezpieczeniowe"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" />

            <HBox spacing="10">
                <Label text="Wybierz pojazd:"/>
                <ComboBox fx:id="vehicleComboBox" prefWidth="300"/>
            </HBox>

            <TableView fx:id="insuranceTable" prefHeight="300" style="-fx-border-color: #e0dedb;">
                <columns>
                    <TableColumn fx:id="colType" text="Typ polisy" prefWidth="120"/>
                    <TableColumn fx:id="colInsurer" text="Ubezpieczyciel" prefWidth="150"/>
                    <TableColumn fx:id="colNumber" text="Numer polisy" prefWidth="150"/>
                    <TableColumn fx:id="colStartDate" text="Data rozpoczÄ™cia" prefWidth="140"/>
                    <TableColumn fx:id="colEndDate" text="Data zakoÅ„czenia" prefWidth="140"/>
                    <TableColumn fx:id="colCost" text="Koszt" prefWidth="100"/>
                    <TableColumn fx:id="colNotes" text="Uwagi" prefWidth="250"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <styleClass>
                    <String fx:value="custom-table"/>
                </styleClass>
            </TableView>

            <GridPane hgap="10" vgap="10" style="-fx-padding: 10;">
                <columnConstraints>
                    <ColumnConstraints prefWidth="120"/>
                    <ColumnConstraints prefWidth="200"/>
                    <ColumnConstraints prefWidth="120"/>
                    <ColumnConstraints prefWidth="200"/>
                </columnConstraints>

                <Label text="Typ polisy:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <ComboBox fx:id="policyTypeComboBox" disable="true" prefWidth="200"
                          GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="OC"/>
                            <String fx:value="AC"/>
                            <String fx:value="OC+AC"/>
                        </FXCollections>
                    </items>
                </ComboBox>

                <Label text="Ubezpieczyciel:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <TextField fx:id="insurerField" disable="true" prefWidth="200"
                           GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                <Label text="Numer polisy:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="policyNumberField" disable="true" prefWidth="200"
                           GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Koszt:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <TextField fx:id="costField" disable="true" prefWidth="200"
                           GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                <Label text="Data rozpoczÄ™cia:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <DatePicker fx:id="startDatePicker" disable="true" prefWidth="200"
                            GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Data zakoÅ„czenia:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                <DatePicker fx:id="endDatePicker" disable="true" prefWidth="200"
                            GridPane.columnIndex="3" GridPane.rowIndex="2"/>

                <Label text="Uwagi:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextArea fx:id="notesArea" disable="true" prefRowCount="3" wrapText="true"
                          GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="3"/>
            </GridPane>

        </VBox>
    </center>

    <stylesheets>
        <URL value="@../styles/table.css"/>
    </stylesheets>

</BorderPane>